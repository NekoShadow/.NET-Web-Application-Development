@model IEnumerable<SportsStore.Domain.Entities.User>

@{
    ViewBag.Title = "查看用顾客列表";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>顾客列表</h2>

@using (Html.BeginForm("ViewUser", "Admin", FormMethod.Get))
{
    <p>
        顾客ID:@Html.TextBox("UserID")
        名字: @Html.TextBox("UserName")
        邮箱: @Html.TextBox("Email")
        联系电话: @Html.TextBox("PhoneNumber")
        <input type="submit" value="搜索" />
    </p>
}
<div class="panel-body">
    <table class="table table-striped" table-condensed table-bordered>
        <tr>
            <th class="text-left">顾客ID</th>
            <th class="text-left">名字</th>
            <th class="text-left">邮箱</th>
            <th class="text-left">联系电话</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-left">@item.UserID</td>
                <td class="text-left">@item.Name</td>
                <td class="text-left">@item.Email</td>
                <td class="text-left">@item.PhoneNumber</td>
            </tr>
        }

    </table>
</div>