@model IEnumerable<SportsStore.Domain.Entities.Order>

@{
    ViewBag.Title = "查看订单";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>订单记录</h2>

@using (Html.BeginForm("ViewOrder", "Admin", FormMethod.Get))
{
    <p>
        订单号:@Html.TextBox("OrderID")
        用户ID: @Html.TextBox("UserID")
        地址: @Html.TextBox("Address") 
        <input type="submit" value="搜索" /><br />
        总价: @Html.TextBox("low") 到 @Html.TextBox("high")
        
    </p>
}
<div class="panel-body">
    <table class="table table-striped" table-condensed table-bordered>
        <tr>
            <th class="text-left">订单号</th>
            <th class="text-left">顾客ID</th>
            <th class="text-left">地址</th>
            <th class="text-left">总价</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-left">@item.OrderID</td>
                <td class="text-left">@item.UserID</td>
                <td class="text-left">@item.Address</td>
                <td class="text-left">@item.TotalPrice</td>
            </tr>
        }

    </table>
</div>

